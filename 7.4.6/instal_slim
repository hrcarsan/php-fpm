# build
apt install -y --no-install-recommends g++ pkg-config make ca-certificates curl

# runtime
apt install -y --no-install-recommends libxml2-dev libsqlite3-dev

libsqlite3-0
apt-cache depends libxml2

tzdata
libicu66

cd /tmp
export PHP_VERSION=7.4.6
curl -SL "http://php.net/get/php-$PHP_VERSION.tar.gz/from/this/mirror" \
          -o php-$PHP_VERSION.tar.gz
tar -xzvf php-$PHP_VERSION.tar.gz
cd php-$PHP_VERSION
./configure --disable-cgi --disable-phpdbg 
make
make install

apt-get --purge --autoremove -y remove g++ pkg-config make ca-certificates curl
rm -rf /tmp/*
rm -rf /var/lib/apt/lists/*

