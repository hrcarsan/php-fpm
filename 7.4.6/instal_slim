  RUN export DEBIAN_FRONTEND=noninteractive \
  && apt-get update -y \
  # ================== BUILD DEPENDENCIES ==================
  && apt-get install -y --no-install-recommends curl wget zip git ca-certificates \
  # ================== PHP DEPENDENCIES ==================
  && apt install -y --no-install-recommends pkg-config g++ libxml++2.6-dev \
      libsqlite3-dev make autoconf \
  # ================== EXTENSIONS DEPENDENCIES ==================
  && apt install -y --no-install-recommends libbz2-dev libcurl4-gnutls-dev libpng-dev \
      libjpeg-dev libfreetype6-dev libc-client-dev libkrb5-dev \
      openssl libonig-dev libzip-dev libmcrypt-dev libssh2-1-dev \
